<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="hibernate.Grado" table="grado" catalog="universidad">
		<id name="id" type="int">
			<column name="id"/>
			<generator class="assigned"/>
		</id>
		<property name="nombre" type="string">
			<column name="nombre" length="100"/>
		</property>
		<set name="asignaturas" table="asignatura" inverse="true" lazy="true" fetch="select">
			<key>
				<column name="id_grado" not-null="true"/>
			</key>
			<one-to-many class="hibernate.Asignatura"/>
		</set>
	</class>
</hibernate-mapping>